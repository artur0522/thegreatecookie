<style>

  #codext-triptych-{{ section.id }}.codext-triptych-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #codext-triptych-{{ section.id }} .codext-triptych {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #codext-triptych-{{ section.id }}  .codext-triptych .codext-triptych-grid {
    display: grid;
    align-items: center;
    gap: {{ section.settings.grid_gap}}px;
    position: relative;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    .codext-triptych .codext-triptych-grid {
      display: grid;
      grid-auto-columns: 1fr 1.25fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    .codext-triptych .codext-triptych-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }


  .codext-triptych-content * {
    margin: 0;
    padding: 0;
  }

  .codext-triptych-content h2 {
    font-weight: bold;
    margin-bottom: 15px;
  }

  .codext-triptych-grid>div {
    position: relative;
  }

  .codext-triptych-images>div {
    position: relaive;
    width: 100%;
    height: 425px;
    z-index: 0;
  }

  .codext-triptych-images img {
    position: absolute;
    width: 250px;
    height: 250px;
    object-fit:cover;
    z-index: 1;
    transition: .25s all ease;
    border-radius: 5px;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
  }

  .codext-triptych-images img:hover {
    z-index: 4;
    transform: scale(1.05);
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.30);
  }

  .codext-triptych-images .codext-triptych-image1{
    top: 0;
    left: calc(50% - 125px);
    z-index: 3;
    transform: rotate(5deg);
  }

  .codext-triptych-images .codext-triptych-image2{
    bottom: 0;
    right: 0;
    z-index: 2;
    transform: rotate(-5deg);
  }

  .codext-triptych-images .codext-triptych-image3{
    bottom: 0;
    left: 0;
    z-index: 1;
    transform: rotate(5deg);
  }

  @media only screen and (max-width: 800px) {

  }
</style>


<div id="codext-triptych-{{ section.id }}" class="codext-triptych-wrap">

<div class="codext-triptych">

  <div class="codext-triptych-grid">

    <div class="codext-triptych-content">
      <h2>{{ section.settings.headline }}</h2>
      {{ section.settings.content }}
    </div>

    <div class="codext-triptych-images">
      <div>&nbsp;</div>
      <img class="codext-triptych-image1" src="{{ section.settings.image_1 | image_url: width: 500 }}">
      <img class="codext-triptych-image2" src="{{ section.settings.image_2 | image_url: width: 500 }}">
      <img class="codext-triptych-image3" src="{{ section.settings.image_3 | image_url: width: 500 }}">
    </div>

  </div>
  <!-- /.codext-triptych-grid -->
  
</div>
<!-- /.codext-triptych -->

</div>
<!-- /.codext-triptych-wrap -->

