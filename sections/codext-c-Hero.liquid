<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #codext-hero-{{ section.id }}.codext-hero-wrap p,
  #codext-hero-{{ section.id }}.codext-hero-wrap p a {
    font-size: {{ section.settings.text_size }};
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #codext-hero-{{ section.id }}.codext-hero-wrap h2 {
    font-size: {{ section.settings.headline_size }};
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }

  #codext-hero-{{ section.id }}.codext-hero-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  

  #codext-hero-{{ section.id }} .codext-hero {
    position: relative;
    background: url({{ section.settings.hero_image | image_url: width: 2048 }}) no-repeat 0 0;
    background-size: cover;
    background-position: center;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #codext-hero-{{ section.id }} .codext-hero>.codext-hero-container {
    display: grid;
    align-items: center;
    justify-content: {{ section.settings.box_alignment }};
    position: relative;
    max-width: 1220px;
    margin: 0 auto;
    padding: 100px 10px 100px 10px;
    z-index: 2;
  }

  #codext-hero-{{ section.id }} .codext-hero>.codext-hero-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
  }

  .codext-hero-content {
    padding: 0 25px 0 25px;
    max-width: 60%;
  }

  @media only screen and (max-width: 800px) {
    .codext-hero-content {
      padding: 0 10px 0 10px;
      max-width: calc(100% - 20px);
    }
  }

  #codext-hero-{{ section.id }} .codext-hero h2 {
    font-weight: bold;
    margin: 0 0 25px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-shadow: 0 2px 4px rgba(0,0,0,0.25);
    text-align: {{section.settings.text_alignment}};
  }

  #codext-hero-{{ section.id }} .codext-hero p {
    margin: 0 0 25px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-shadow: 0 2px 4px rgba(0,0,0,0.25);
    text-align: {{section.settings.text_alignment}};
  }

  .codext-hero p:last-child {
    margin-bottom: 0;
  }

  #codext-hero-{{ section.id }} .codext-hero a.codext-hero-cta {
    display: inline-block;
    padding: 15px 40px;
    background-image: {{section.settings.button_background_color}};
    border-radius: 27.5px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
  }

  .codext-hero a.codext-hero-cta:hover {
    transform: translateY(-2px);
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="codext-hero-{{ section.id }}" class="codext-hero-wrap">
<div class="codext-hero">
  <div class="codext-hero-cover"></div>
  <div class="codext-hero-container">
  <div class="codext-hero-content">
    <h2>{{ section.settings.headline }}</h2>
    <p>{{ section.settings.content }}</p>
    <p><a class="codext-hero-cta" href="{{ section.settings.cta_link }}">{{ section.settings.cta }}</a></p>
  </div>
  </div>
</div>
</div>

