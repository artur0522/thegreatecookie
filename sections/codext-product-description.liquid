{%- if product.description -%}
  <div class="container mx-auto py-8">
    {{- product.description -}}
  </div>
  <style>
    .codext-product-description img {
        max-width: 80%;
        margin: 0 auto;
        display: block;
    }
    .codext-product-description table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
        width: fit-content;
        margin: 0 auto;
    }
    .codext-product-description table th, .codext-product-description table td {
        text-align: left;
        padding: 5px;
    }
    .codext-product-description table a {
        color: #c7dd16;
    }

    @media (max-width: 767px) {
        .codext-product-description table {
            width: 100%;
        }
    }
    
  </style>
{%- endif -%}



{% schema %}
  {
    "name": "c/ Product description",
    "class": "codext-product-description",
    "tag": "section",
    "disabled_on": {
      "groups": ["header"]
    },
    "presets": [
      {
        "name": "c/ Product description"

      }
    ]
  }
{% endschema %}