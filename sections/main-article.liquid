{%- assign number_of_comments = article.comments_count -%}

{% if comment %}
  {%- assign number_of_comments = article.comments_count | plus: 1 -%}
{% endif %}

<style>
  .article_content {
    color: #464646 !important;
  }

  .article_content ol,
  .article_content ul:not(.list-none) {
    margin: 0 0 15px 30px;
    padding: 0;
    text-rendering: optimizeLegibility;
  }

  .article_content ul:not(.list-none) {
    display: block;
    list-style-type: disc;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 40px;
  }

  .article_content ol {
    list-style: decimal;
    margin-left: 15px;
  }

  .article_content p {
    margin-bottom: 25px;
    line-height: 1.5;
    font-size: 16px;
  }

  .article_content h1 {
    margin-top: 60px;
    margin-bottom: 25px;
    font-size: 35px;
  }

  .article_content h2,
  .article_content .h2 {
    font-family: 'Gotham';
    font-size: 20px;
    text-transform: uppercase;
    font-weight: bold;
    line-height: 1.1;
    margin-bottom: 20px;
    margin-top: 60px;
  }

  .article_content li {
    margin-bottom: 20px;
  }
</style>

<div class="page-width-{{ section.settings.page_width }}">
  <div class="relative py-16 bg-white overflow-hidden">
    <div class="relative" style="margin: 0 20px">
      <div class="article_content mt-6 mx-auto">
        {{
          article.content
          | remove: '[hr]'
          | remove: '[grid]'
          | remove: '[col_50]'
          | remove: '[col_end]'
          | remove: '[grid_end]'
        }}

        {% render 'social-sharing',
          share_title: article.title,
          share_permalink: article.url,
          share_image: article.image
        %}

        {% if blog.comments_enabled? %}
          {% if number_of_comments > 0 %}
            <hr style="margin-bottom: 45px">
            <div class="h2">{{ 'blogs.comments.with_count' | t: count: number_of_comments }}</div>
          {% endif %}

          {% paginate article.comments by 5 %}
            {% comment %}
              #comments is required, it is used as an anchor link by Shopify.
            {% endcomment %}
            <div id="comments">
              {% if comment and comment.errors == blank %}
                <hr class="hr--small hr--clear">
                <p class="note note--success">
                  {% if blog.moderated? %}
                    {{ 'blogs.comments.success_moderated' | t }}
                  {% else %}
                    {{ 'blogs.comments.success' | t }}
                  {% endif %}
                </p>
              {% endif %}

              {% if number_of_comments > 0 %}
                <ul class="list-none">
                  {% comment %}
                    If a comment was just submitted with no blank field, show it.
                  {% endcomment %}
                  {% if comment and comment.errors == blank %}
                    <li id="{{ comment.id }}" class="comment first{% if article.comments_count == 0 %} last{% endif %}">
                      <div class="flex gap-8">
                        <div class="flex flex-col w-1/4">
                          <span class="h5 comment-author">{{ comment.author }}</span>
                          <span class="comment-date">
                            {{ comment.created_at | time_tag: format: 'month_day_year' }}
                          </span>
                        </div>
                        <div class="flex-1">
                          {{ comment.content }}
                        </div>
                      </div>
                    </li>
                  {% endif %}

                  {% for comment in article.comments %}
                    <li
                      id="{{ comment.id }}"
                      class="comment{% unless number_of_comments > article.comments_count %}{% if forloop.first %} first{% endif %}{% endunless %}{% if forloop.last %} last {% endif %}"
                    >
                      <div class="flex gap-8">
                        <div class="flex flex-col w-1/4">
                          <span class="h5 comment-author">{{ comment.author }}</span>
                          <span class="comment-date">
                            {{ comment.created_at | time_tag: format: 'month_day_year' }}
                          </span>
                        </div>
                        <div class="flex-1">
                          {{ comment.content }}
                        </div>
                      </div>
                    </li>

                    {% unless forloop.last %}
                      <li><hr class="hr--clear"></li>
                    {% endunless %}
                  {% endfor %}
                </ul>

                {% if paginate.pages > 1 %}
                  {% render 'pagination' %}
                {% endif %}
              {% endif %}

              <hr style="margin-bottom: 45px">

              <div class="mx-auto" style="width: 100%; max-width: 800px;">
                <header>
                  <div class="h2">{{ 'blogs.comments.title' | t }}</div>
                </header>

                {% form 'new_comment', article %}
                  {{ form.errors | default_errors }}

                  <div class="flex flex-col md:flex-row gap-8">
                    <div class="flex-1 flex flex-col">
                      <label class="upppercase text-din-next text-12 tracking-wider" for="CommentAuthor">
                        {{- 'blogs.comments.name' | t -}}
                      </label>
                      <input
                        class="w-full"
                        type="text"
                        name="comment[author]"
                        id="CommentAuthor"
                        value="{{ form.author }}"
                        autocapitalize="words"
                        style="border-color: #EEE"
                      >
                    </div>
                    <div class="flex-1 flex flex-col">
                      <label class="upppercase text-din-next text-12 tracking-wider" for="CommentEmail">
                        {{- 'blogs.comments.email' | t -}}
                      </label>
                      <input
                        class="w-full"
                        type="email"
                        name="comment[email]"
                        id="CommentEmail"
                        value="{{ form.email }}"
                        autocorrect="off"
                        autocapitalize="off"
                        style="border-color: #EEE"
                      >
                    </div>
                  </div>

                  <div class="flex flex-col" style="margin-top: 20px">
                    <label class="upppercase text-din-next text-12 tracking-wider" for="CommentBody">
                      {{- 'blogs.comments.message' | t -}}
                    </label>
                    <textarea
                      name="comment[body]"
                      id="CommentBody"
                      style="border-color: #EEE"
                    >{{ form.body }}</textarea>
                  </div>

                  {% if blog.moderated? %}
                    <p class="upppercase text-din-next text-12 tracking-wider">
                      <small>{{ 'blogs.comments.moderated' | t }}</small>
                    </p>
                  {% endif %}

                  <button
                    class="g-recaptcha btn text-16 block cursor-pointer w-full md:w-auto"
                    data-action="submit"
                  >
                    {{ 'blogs.comments.post' | t }}
                  </button>
                {% endform %}
              </div>
            </div>
          {% endpaginate %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Content sections centered",
  "class": "contentSections-centered",
  "settings": [
    {
      "type": "select",
      "id": "page_width",
      "label": "Page width",
      "options": [
        {
          "value": "800",
          "label": "800px"
        },
        {
          "value": "1042",
          "label": "1042px"
        },
        {
          "value": "1440",
          "label": "1440px"
        },
        {
          "value": "max",
          "label": "Max"
        }
      ],
      "default": "1440"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show content",
      "default": true
    }
  ]
}
{% endschema %}
